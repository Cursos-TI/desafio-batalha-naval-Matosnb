#include <stdio.h>

#define TAM 10             // tamanho fixo do tabuleiro (10x10)
#define NAVIO 3            // valor que representa navio
#define AGUA 0             // valor que representa água
#define TAMANHO_NAVIO 3    // cada navio ocupa 3 posições

int main() {
    int tabuleiro[TAM][TAM];

    // Inicializar o tabuleiro com água (0)
    for (int i = 0; i < TAM; i++) {
        for (int j = 0; j < TAM; j++) {
            tabuleiro[i][j] = AGUA;
        }
    }

    // -------------------------
    // Definição dos navios
    // -------------------------

    // Navio horizontal
    int linhaH = 2;
    int colunaH = 4;

    // Navio vertical
    int linhaV = 5;
    int colunaV = 7;

    // Navio diagonal ↘ (linha e coluna aumentando)
    int linhaD1 = 0;
    int colunaD1 = 0;

    // Navio diagonal ↙ (linha aumentando, coluna diminuindo)
    int linhaD2 = 0;
    int colunaD2 = 9;

    // -------------------------
    // Posicionar navio horizontal
    // -------------------------
    for (int i = 0; i < TAMANHO_NAVIO; i++) {
        if (colunaH + i < TAM && tabuleiro[linhaH][colunaH + i] == AGUA) {
            tabuleiro[linhaH][colunaH + i] = NAVIO;
        }
    }

    // -------------------------
    // Posicionar navio vertical
    // -------------------------
    for (int i = 0; i < TAMANHO_NAVIO; i++) {
        if (linhaV + i < TAM && tabuleiro[linhaV + i][colunaV] == AGUA) {
            tabuleiro[linhaV + i][colunaV] = NAVIO;
        }
    }

    // -------------------------
    // Posicionar navio diagonal ↘
    // -------------------------
    for (int i = 0; i < TAMANHO_NAVIO; i++) {
        if (linhaD1 + i < TAM && colunaD1 + i < TAM && tabuleiro[linhaD1 + i][colunaD1 + i] == AGUA) {
            tabuleiro[linhaD1 + i][colunaD1 + i] = NAVIO;
        }
    }

    // -------------------------
    // Posicionar navio diagonal ↙
    // -------------------------
    for (int i = 0; i < TAMANHO_NAVIO; i++) {
        if (linhaD2 + i < TAM && colunaD2 - i >= 0 && tabuleiro[linhaD2 + i][colunaD2 - i] == AGUA) {
            tabuleiro[linhaD2 + i][colunaD2 - i] = NAVIO;
        }
    }

    // -------------------------
    // Exibir tabuleiro
    // -------------------------
    printf("===== Tabuleiro Batalha Naval =====\n\n");

    for (int i = 0; i < TAM; i++) {
        for (int j = 0; j < TAM; j++) {
            printf("%d ", tabuleiro[i][j]);
        }
        printf("\n");
    }

    return 0;
}
